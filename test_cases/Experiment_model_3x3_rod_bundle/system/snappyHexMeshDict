    }
    
    
      boundary_back0.stl
    {
        type closedTriSurfaceMesh;
        name back;
    }
    
      boundary_front0.stl
    {
        type closedTriSurfaceMesh;
        name front;
    }
    
      boundary_right0.stl
    {
        type closedTriSurfaceMesh;
        name right;
    }
    
   /* 
    round
   {
    type            searchableCylinder;
